{% assign aspect_ratio = include.height | times: 1.0 | divided_by: include.width %}
{% assign padding_top = aspect_ratio | times: 100 %}

<div
  id="videoContainer-{{ include.id }}"
  style="position: relative; width: 100%; padding-top: {{ padding_top }}%;"
  data-video-id="{{ include.id }}">
  <div id="youtubePlayer-{{ include.id }}" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></div>
  {% if include.fallback %}
    <div id="fallback-{{ include.id }}" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: none;">
      <video
        width="100%"
        height="100%"
        controls
        preload="none">
        <source src="{{ site.baseurl }}/assets/videos/{{ include.fallback }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
  {% endif %}
</div>
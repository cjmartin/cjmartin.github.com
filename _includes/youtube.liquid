<div id="videoContainer-{{ include.id }}" style="width:{{ include.width }}px; height:{{ include.height }}px;">
  <div id="youtubePlayer-{{ include.id }}" data-video-id="{{ include.id }}"></div>
  <div id="fallback-{{ include.id }}" style="display: none;">
    <video width="{{ include.width }}" height="{{ include.height }}" controls preload="none">
      <source src="{{ site.baseurl }}/assets/videos/{{ include.fallback }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>
</div>

<!-- Load external script (ensures it's loaded once) -->
<script defer src="{{ '/assets/js/youtube-embed.js' | relative_url }}"></script>